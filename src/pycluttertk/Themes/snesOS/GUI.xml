<!--A GTK adwaita based theme -->
<GUI>
	<window>
		<base type="gradient">
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="edeceb" alpha="1" position="0"/>
				<stop color="edeceb" alpha="1" position="100"/>
			</gradient>
		</base>
	</window>
	<button>
		<out type="gradient">
			<rounded topleft="20" topright="20" bottomleft="20" bottomright="20"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="f3f5f3" alpha="1" position="0"/>
				<stop color="d9dcd9" alpha="1" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="1" top="2" bottom="2" left="2" right="2"/>
			<text color="000000"  alpha="1"/>
		</out>
		<in type="gradient">
			<rounded topleft="20" topright="20" bottomleft="20" bottomright="20"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="cbcecb" alpha="1" position="0"/>
				<stop color="d9dcd9" alpha="1" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="1" top="2" bottom="2" left="2" right="2"/>
			<text color="000000" alpha="1"/>
		</in>
		<hover type="gradient">
			<rounded topleft="20" topright="20" bottomleft="20" bottomright="20"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="FFFFFF" alpha="1" position="0"/>
				<stop color="d9dcd9" alpha="1" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="1" top="2" bottom="2" left="2" right="2"/>
			<text color="000000" alpha="1"/>
		</hover>
	</button>
	<menu>
		<base type="gradient">
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="edeceb" alpha="1" position="0"/>
				<stop color="edeceb" alpha="1" position="100"/>
			</gradient>
			<border color="000000" alpha="0" top="2" bottom="2" left="2" right="2"/>
			<text color="000000" alpha="1"/>
		</base>
	</menu>
	<menuitem>
		<out type="gradient">
			<rounded topleft="10" topright="10" bottomleft="0" bottomright="0"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="f30000" alpha="0" position="0"/>
				<stop color="d9dcd9" alpha="0" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="0" top="2" bottom="2" left="2" right="2"/>
			<text color="000000" alpha="1"/>
		</out>
		<in type="gradient">
			<rounded topleft="10" topright="10" bottomleft="0" bottomright="0"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="7ca3d3" alpha="1" position="0"/>
				<stop color="658fc4" alpha="1" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="1" top="2" bottom="2" left="2" right="2"/>
			<text color="FFFFFF" alpha="1"/>
		</in>
		<hover type="gradient">
			<rounded topleft="10" topright="10" bottomleft="0" bottomright="0"/>
			<gradient type="linear" start="top-left" end="bottom-left">
				<stop color="FFFFFF" alpha="0" position="0"/>
				<stop color="d9dcd9" alpha="0" position="100"/>
			</gradient>
			<border color="cbcecb" alpha="0" top="2" bottom="2" left="2" right="2"/>
			<text color="000000" alpha="1"/>
		</hover>
	</menuitem>
</GUI>
